{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "-IC:/SDL2-2.24.0/include",
                "-link",
                "C:/SDL2-2.24.0/lib/x64/SDL2.lib",
                "C:/SDL2-2.24.0/lib/x64/SDL2main.lib",
                "Shell32.lib",
                "-subsystem:console"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:\\mingw_link\\mingw_include",
                "-LC:\\mingw_link\\mingw_lib",
                "-w",
                "\"-Wl,-subsystem,console\"",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}